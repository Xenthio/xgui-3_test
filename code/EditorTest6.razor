@using Sandbox;
@using Sandbox.UI;
@using XGUI;
@attribute [StyleSheet( "/XGUI/DefaultStyles/OliveGreen.scss" )]
@inherits Window

<root title="My New XGUI Window" width="270" height="240" theme="OliveGreen">
	<div class="window-content">
		<button style="position: absolute;  right: 6px;  bottom: 6px;  width: 75px">
			OK
		</button>
		<textentry style="position: absolute;  left: 113px;  top: 6px;  right: 6px" />
		<label style="position: absolute;  left: 6px;  top: 10px">
			Cool TextBox:
		</label>
		<check style="position: absolute;  left: 6px;  top: 36px" checked="True">
			Cooler CheckBox
		</check>
		<sliderscale min="0" max="100" step="1" style="position: absolute;  left: 6px;  top: 58px;  height: 30px;  right: 6px" />
		<button style="position: absolute;  left: 6px;  width: 75px;  bottom: 6px">
			Cancel
		</button>
	</div>

</root>

